{%- assign product_image_width = 'large' -%}
{% when 'medium' %}
{%- assign image_grid = 'one-half' -%}
{%- assign product_image_width = 'grande' -%}
{% when 'large' %}
{%- assign image_grid = 'three-fifths' -%}
{%- assign product_image_width = '1024x1024' -%}  
{% endcase %}
