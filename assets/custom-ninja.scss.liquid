/*============================================================================
Custom CSS
/*============================================================================*/
#header{
  .desk-promo{
    border-bottom: 1px solid #8c8c8c;
    height: 60px;
  }
  .deskNavWrapper{
    .site-nav{
      text-transform: uppercase;
      .site-nav__link{
        padding: 5px 40px;
      }
    }
  }
}
.site-footer{
  text-transform: uppercase;
  .footer-content{
    display: block;
    .footer-social-icons{
      width: 100%;
      text-align: center;
      .social-icons{
        li{
          img{
            width:50px;
          }
        }
      }
    }
  }
}
.template-index{
  .home-promotions{
    text-transform: uppercase;
    .contact-form{
      .contact_form_inputs{
        width:100%;
        #Email{
          margin-right: 0;
          border-radius: 0;
          width: 50%;
        }
        #subscribe{
          border-radius: 0;
        }
      }
    }
  }
  .masonryh{
    height: auto;
  }
  .section-featured-collection{
    .index-pgi{
      width:100%;
      padding: 0;
    }
  }
}
