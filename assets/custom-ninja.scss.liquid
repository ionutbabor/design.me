/*============================================================================
Custom CSS
/*============================================================================*/
$gutter: 30px;
$zindexDrawer: 100000;
$colorDrawerText: #333;
$colorDrawers: #f6f6f6;
$drawerTransition: all 0.4s cubic-bezier(0.46, 0.01, 0.32, 1);
$colorDrawerBorder: #fff;
$drawerNavWidth: 300px;
$drawerCartWidth: 300px;

.content-lights {
  position: fixed;
  top: 0;
  right: -100%;
  bottom: 0;
  left: auto;
  background: rgba(0,0,0,0.65);
  opacity: 0;
  transition: opacity 0.45s ease;
  z-index: 900;
}
.js-drawer-open {
  .content-lights {
    right: 0;
    left: 0;
    opacity: 1;
  }
}
.cart-wrapper .cart-item-count.hidden-count{
  display: none;
}



/*============================================================================
  #Ajax Cart Styles (conditionally loaded)
  ==============================================================================*/

  .ajaxcart__inner {
    margin-bottom: 30px;
  }

  .ajaxcart__row {
    > .grid {
      margin-left: -30px / 2;

      > .grid__item {
        padding-left: 30px / 2;
      }
    }
  }

  .ajaxcart__product {
    position: relative;
    max-height: 500px;

    &.is-removed {
      max-height: 0;
      overflow: hidden;
      visibility: hidden;
      transition: all 450ms cubic-bezier(0.57,.06,.05,.95);
      /*@include backface();*/
    }
  }

  .ajaxcart__row {
    padding-bottom: 30px / 2;
    margin-bottom: 30px / 2;
    border-bottom: 1px solid #fff;
  }

  .ajaxcart__product-image {
    display: block;
    overflow: hidden;
    margin-bottom: 15px;

    img {
      display: block;
      margin: 0 auto;
      max-width: 100%;
    }
  }

  .ajaxcart__product-name,
  .ajaxcart__product-meta {
    display: block;
  }

  .ajaxcart__product-name + .ajaxcart__product-meta {
    padding-top: 30px / 5;
  }

  /*================ Quantity Selectors ================*/
  .js-qty {
    position: relative;
    margin-bottom: 1em;
    max-width: 100px;
    min-width: 75px;
    overflow: visible;

    input {
      display: block;
      background: none;
      text-align: center;
      width: 100%;
      padding: 5px 25px;
      margin: 0;
    }
  }

  .js-qty__adjust {
    cursor: pointer;
    position: absolute;
    display: block;
    top: 0;
    bottom: 0;
    border: 0 none;
    padding: 0 8px;
    background: none;
    text-align: center;
    overflow: hidden;
    /* @include user-select(none);*/

    &:hover,
    &:focus {
      color: #000;
    }
  }

  .js-qty__adjust--plus {
    right: 0;
    border-left: 1px solid #ccc;
  }

  .js-qty__adjust--minus {
    left: 0;
    border-right: 1px solid #ccc;
  }

/*============================================================================
  #Drawers Begin
  ==============================================================================*/
  .js-drawer-open {
    overflow: hidden;
  }

  .drawer {
    -webkit-transform: translateZ(0);
    transition: all 0.4s cubic-bezier(0.46, 0.01, 0.32, 1);
    display: none;
    position: fixed;
    overflow-y: auto;
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch;
    top: 0;
    bottom: 0;
    padding: 0 15px 15px;
    max-width: 95%;
    z-index: 9000;
    color: #333;
    background-color: #f6f6f6;
    transition: all 0.4s cubic-bezier(0.46, 0.01, 0.32, 1);
    box-shadow: 0 0.125rem 2.5rem 0 rgba(0,0,0,0.35);

    a {
      color:  #333;

      &:hover,
      &:focus {
        opacity: 0.7;
      }
    }

    input,
    textarea {
      border-color: #fff;
    }
  }

  .drawer--left {
    width: 300px;
    left: -300px;
    border-right: 1px solid #fff;

    .js-drawer-open-left & {
      display: block;
      transform:translateX(300px);

      .lt-ie9 & {
        left: 0;
      }
    }
  }

  .drawer--right {
    width: 300px;
    right: -300px;
    border-left: 1px solid #fff;

    .js-drawer-open-right & {
      display: block;
      transform:translateX(-300px);

      .lt-ie9 & {
        right: 0;
      }
    }
  }

  #PageContainer {
    overflow: hidden;
  }

  .is-moved-by-drawer {
    /*  @include promote-layer();*/
    -webkit-transform: translateZ(0);
    transition: all 0.4s cubic-bezier(0.46, 0.01, 0.32, 1);

    .js-drawer-open-left & {
      transform:translateX(300px);
    }

    /*content on right*/
  /*.js-drawer-open-right & {
    transform:translateX(-300px);
    }*/
  }

  .drawer__header {
    display: table;
    height: 70px;
    width: 100%;
    margin-bottom: 15px;
    border-bottom: 1px solid #fff;
  }

  .drawer__title,
  .drawer__close {
    display: table-cell;
    vertical-align: middle;
  }

  .drawer__title {
    width: 100%;
  }

  .drawer__close {
    width: 1%;
    text-align: center;
    font-size: em(18px);
  }

  .drawer__close button {
    position: relative;
    right: -20px;
    height: 100%;
    padding: 0 20px;
    color: inherit;

    &:active,
    &:focus {
      background-color: darken(#f6f6f6, 5%);
    }
  }
/*============================================================================
  #Drawers End
